<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.Cursor?>
<GridPane alignment="CENTER" stylesheets="@../../css/styles.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fastfoodfactory.app.controllers.OrdersController">

    <!-- Properties -->
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints vgrow="SOMETIMES" />
        <RowConstraints vgrow="SOMETIMES" />
        <RowConstraints vgrow="SOMETIMES" />
        <RowConstraints vgrow="SOMETIMES" />
    </rowConstraints>

    <padding>
        <Insets topRightBottomLeft="10.0" />
    </padding>

    <!-- Content -->

    <!-- Breadcrumbs section -->
    <HBox alignment="CENTER_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="3">
        <GridPane.margin>
            <Insets top="5.0" bottom="20.0" left="20.0" right="20.0" />
        </GridPane.margin>
        <Label text="Orders">
            <font>
                <Font name="Arial" size="18.0" />
            </font>
        </Label>
    </HBox>

    <!-- Search function -->

    <!-- New Order Button -->
    <Button contentDisplay="CENTER" GridPane.columnIndex="2" GridPane.rowIndex="1" onMouseClicked="#create" styleClass="btn-add" text="New Order">
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>

    </Button>

</GridPane>
